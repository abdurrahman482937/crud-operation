<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
  </head>
  <body class="w-full h-full bg-zinc-900 text-white p-4">
    <div class="mb-10">
      <a href="/" class="text-blue-400">Back to Home</a>
    </div>
    <h1 class="text-3xl text-left mt-8 mb-4">All User</h1>
    <div class="users flex flex-wrap gap-5">
      <% users.forEach(function(user){ %>
      <div
        class="user w-72 p-4 rounded-lg mb-4 bg-gradient-to-br from-zinc-800 to-zinc-700"
      >
        <div class="h-52 w-full bg-slate-600 rounded-lg">
          <img
            class="object-cover w-full h-full rounded-lg"
            src="<%= user.imageUrl %>"
            alt=""
          />
        </div>
        <h2 class="text-xl mt-5"><%= user.name %></h2>
        <p class="text-base text-zinc-500"><%= user.email %></p>
        <div class="flex gap-3 mt-5">
          <a
            href="/edit/<%= user._id %>"
            class="bg-zinc-700 px-5 p-2 rounded-lg"
            >Edit</a
          >
          <a
            href="/delete/<%= user._id %>"
            class="bg-red-600 px-5 p-2 rounded-lg"
            >Delete</a
          >
        </div>
      </div>
      <% }) %>
    </div>
  </body>
</html>
